.row.shadowed{:style=>'background-color: #ffffff;'}
  .large-3.columns
    %dl.dropdown
      %dt
        %a
          %span=@category.present? ? @category.name : 'Choose a category'
      %dd
        %ul
          %li
            %a.default

          -@categories.each do |cat|
            %li
              %a.category-select{:'data-cat-id'=>"#{cat.id}"}=cat.name

    #lists
      #category-lists
        -if @lists.present?
          =render @lists
      .show-list-suggestion{:"data-category-id"=>@category.id}
        + add a list

        .list-suggest
          %input{:type => 'text', :name => 'list'}
          .message
            enter to submit
  .large-9.columns#map-area
    #map_wrapper
      #map_canvas.mapping
    #listings
      %h3.category-title=@title
      #current-listings
        -if @listings.count > 0
          =render @listings

